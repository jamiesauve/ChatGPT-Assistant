{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../app/src/dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Sage",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "os": {
        "all": true
      },
      "fs": {
        "createDir": true,
        "exists": true,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$APP",
          "$APP/*"
        ]
      },
      "window": {
        "setAlwaysOnTop": true,
        "setSize": true,
        "setPosition": true,
        "minimize": true,
        "unminimize": true
      },
      "all": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.sage.app",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Sage",
        "width": 350
      }
    ]
  }
}
